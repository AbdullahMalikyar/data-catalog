{% embed 'field.html.twig' with {
  'margin': 2,
  'classes': [
    'block'
  ],
  'item_classes': [
    'p-2',
    'bg-cyan',
    'text-white',
    'border-2',
    'border-cyan-darker',
    'rounded',
  ],
} %}
	{% spaceless %}
		{% block content %}
			{%- for item in items if item.content|render|striptags|trim is not empty -%}
				<a{{item.attributes.addClass(item_classes)}} href="mailto:{{ item.content['#title'] }}">
					{% include active_theme_path() ~ '/icons/send.svg' %}
					<span class="ml-2">{{ item.content['#title'] }}</span>
				</a>
			{%- endfor -%}
		{% endblock %}
	{% endspaceless %}
{% endembed %}
