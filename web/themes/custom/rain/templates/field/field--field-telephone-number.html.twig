{% embed 'field.html.twig' with {
  'margin': 2,
  'classes': [
    'block'
  ],
  'item_classes': [
    'p-2',
    'bg-cyan',
    'text-white',
    'border-2',
    'border-cyan-darker',
    'rounded',
  ],
} %}
	{% block content %}
		{%- for item in items -%}
			<a{{item.attributes.addClass(item_classes)}} href="tel:+1{{ item.content['#title'] | trim }}">
				{% include active_theme_path() ~ '/icons/phone.svg' %}
				<span class="ml-2">{{ item.content['#title'] }}</span>
			</a>
		{%- endfor -%}
	{% endblock %}
{% endembed %}
