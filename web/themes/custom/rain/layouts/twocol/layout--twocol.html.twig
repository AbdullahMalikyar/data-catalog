{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set layout_classes = layout_classes|default([
    'flex',
    'flex-col',
    'md:flex-row',
    'flex-wrap',
    'md:-mx-2',
  ])
%}
{%
  set region_classes = region_classes|default([
    'md:w-1/2',
  ])
%}
{% if content %}
	<div{{attributes.addClass(layout_classes)}}>
		{% if content.first %}
			<div {{ region_attributes.first.addClass(region_classes) }}>
				{{ content.first }}
			</div>
		{% endif %}
		{% if content.second %}
			<div {{ region_attributes.second.addClass(region_classes) }}>
				{{ content.second }}
			</div>
		{% endif %}
	</div>
{% endif %}
